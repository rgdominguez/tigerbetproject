{% block stylesheets %}
    <style>
        section{
            width: 100%;
            display: flex;
        }
        section > div:nth-child(1){
            width: 32%;
        }
        section > div:nth-child(2){
            width: 68%;
        }
        section > div{
            padding: 20px;
            box-sizing: border-box;
        }

    </style>
{% endblock %}